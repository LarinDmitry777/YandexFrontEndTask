{{#if adventures.length}}
    <section>
    {{#each adventures}}
        <article class="adventure">
            <a href="/scenes/{{ firstSceneId }}">
                <img class="adventure__image" src="{{ ../staticBasePath }}images/adventures/{{imageName}}">
            </a>
            <div class="adventure__description-column">
                <a href="/scenes/{{ firstSceneId }}">
                    <div class="adventure__title">{{ name }}</div>
                </a>
                {{#if description}}
                    <div class="adventure__description">{{ description }}</div>
                {{/if}}
                <div class="adventure__hash-tag-container">
                    {{#each hashTags}}
                        <a href="/hashtags/{{ textEn }}" class="adventure__hash-tag">#{{ textRu }}</a>
                    {{/each}}
                </div>
            </div>
        </article>
    {{/each}}
    </section>
{{/if}}
