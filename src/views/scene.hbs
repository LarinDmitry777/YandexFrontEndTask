<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="{{ meta.charset }}" />
    <title>{{ title }}</title>
    <meta name="description" content="{{ meta.description }}" />
    <link rel="shortcut icon" href="{{ staticBasePath }}favicon.png" type="image/png" />
    <link rel="stylesheet" href="{{ staticBasePath }}styles/index.css" media="screen" />
    <link rel="stylesheet" href="{{ staticBasePath }}styles/scene.css" media="screen" />
</head>
<body>
{{> header }}
<section class="content">
    {{#if scene.imageName}}
        <article class="text-wrapper text-wrapper_with-image">
            <div class="text-wrapper__text text-wrapper__text_{{ scene.textPosition }}">
                {{ breaklines scene.text }}
            </div>
        </article>
        <img class="image" src="{{ staticBasePath }}images/scenes/{{ scene.imageName }}">
    {{else}}
        <article class="text-wrapper text-wrapper_without-image">
            <div class="text-wrapper__text text-wrapper__text_{{ scene.textPosition }}">
                {{ breaklines scene.text }}
            </div>
        </article>
    {{/if}}

    {{#if scene.achievements.length}}
        <article class="achievements_list">
        {{#each scene.achievements}}
            <div class="achievement">
                <img class="achievement__image" src="{{ ../staticBasePath }}images/achievements/{{imageName}}">
                <div class="achievement__text">Достижение получено</div>
                <div class="achievement__name">{{text}}</div>
            </div>
        {{/each}}
        </article>
    {{/if}}
    {{#if scene.actions.length}}
        <article class="action-list">
            {{#each scene.actions}}
                <a class="action-list__action" href="/scenes/{{ nextSceneId }}">
                    {{ text }}
                </a>
            {{/each}}
        </article>
    {{else}}
        <div class="action-list">
            <a class="action-list__action" href="/scenes/{{scene.firstSceneId}}">Начать заново</a>
        </div>
    {{/if}}
</section>
</body>
</html>
